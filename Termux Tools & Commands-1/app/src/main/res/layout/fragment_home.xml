<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF"
    android:gravity="center">

    <!-- Home Image -->
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/home_img"
        android:scaleType="centerCrop"
        android:layout_marginBottom="24dp"
        android:contentDescription="Termux Tools" />

    <!-- Welcome Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Termux Tools and Commands"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your ultimate guide for Termux tools and commands"
        android:textSize="16sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <View
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:background="#4CAF50"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Navigate using the bottom menu:"
        android:textSize="14sp"
        android:textColor="#444444"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• Home - Welcome screen\n• Tools - Offline tools guide\n• Web - Online resources"
        android:textSize="14sp"
        android:textColor="#666666"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2" />

</LinearLayout>