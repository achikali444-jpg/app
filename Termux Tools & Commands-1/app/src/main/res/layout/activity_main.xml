<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/drawerLayout"
android:layout_width="match_parent"
android:layout_height="match_parent">

<!-- Main Content -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

<!-- Primary Header with Menu Icon -->
<com.google.android.material.appbar.MaterialToolbar
android:id="@+id/toolbar"
android:layout_width="match_parent"
android:layout_height="?attr/actionBarSize"
android:background="#2C2C2C"
android:elevation="8dp"
android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

<ImageView
android:id="@+id/btnMenu"
android:layout_width="24dp"
android:layout_height="24dp"
android:src="@drawable/ic_menu"
android:padding="4dp"
android:layout_marginStart="8dp"
android:background="?attr/selectableItemBackgroundBorderless"
android:clickable="true"
android:focusable="true" />

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Termux Tools &amp; Commands"
android:textColor="@android:color/white"
android:textSize="18sp"
android:textStyle="bold"
android:layout_gravity="center" />

</com.google.android.material.appbar.MaterialToolbar>

<!-- Banner Ad - Only shows in Home and Tools tabs -->
<com.google.android.gms.ads.AdView
android:id="@+id/adView"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:visibility="gone"
app:adSize="BANNER"
app:adUnitId="ca-app-pub-5654505690672290/3733056983" />

<!-- ViewPager for content -->
<androidx.viewpager2.widget.ViewPager2
android:id="@+id/viewPager"
android:layout_width="match_parent"
android:layout_height="0dp"
android:layout_weight="1" />

<!-- Bottom Tab Layout -->
<com.google.android.material.tabs.TabLayout
android:id="@+id/tabLayout"
android:layout_width="match_parent"
android:layout_height="68dp"
android:background="#2C2C2C"
android:elevation="12dp"
app:tabIndicatorHeight="0dp"
app:tabSelectedTextColor="#4CAF50"
app:tabTextColor="#B0B0B0"
app:tabGravity="center"
app:tabMode="fixed"
app:tabPaddingStart="32dp"
app:tabPaddingEnd="32dp"
app:tabContentStart="48dp"
app:tabMinWidth="0dp"
app:tabPaddingBottom="8dp"
app:tabPaddingTop="8dp">

</com.google.android.material.tabs.TabLayout>

</LinearLayout>

<!-- Navigation Drawer (Sidebar) -->
<com.google.android.material.navigation.NavigationView
android:id="@+id/navigationView"
android:layout_width="280dp"
android:layout_height="match_parent"
android:layout_gravity="start"
app:headerLayout="@layout/nav_header"
app:menu="@menu/nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>