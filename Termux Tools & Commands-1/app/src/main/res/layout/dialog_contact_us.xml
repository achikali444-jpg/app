<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#2C2C2C"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/imageViewContactDialog"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#E3F2FD"
            android:padding="8dp" />

        <TextView
            android:id="@+id/textViewContactTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="Contact Us"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center_vertical" />

    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Content -->
            <TextView
                android:id="@+id/textViewContactContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact content will appear here"
                android:textSize="14sp"
                android:textColor="#444444"
                android:lineSpacingMultiplier="1.4"
                android:layout_marginBottom="16dp" />

            <!-- Contact Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get in touch with us:"
                android:textSize="14sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Email Box with Copy Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#E3F2FD"
                android:padding="12dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/textViewContactEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ“§ achikahmed.info@gmail.com"
                    android:textSize="14sp"
                    android:textColor="#2196F3"
                    android:gravity="center_vertical" />

                <ImageView
                    android:id="@+id/btnCopyContactEmail"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_copy"
                    android:padding="4dp"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

            <!-- Send Email Button -->
            <TextView
                android:id="@+id/btnSendEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“© Send Email"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="#2196F3"
                android:padding="16dp"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Response Time Info -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ’¡ We typically respond within 24-48 hours"
                android:textSize="12sp"
                android:textColor="#666666"
                android:textStyle="italic"
                android:gravity="center" />

        </LinearLayout>

    </ScrollView>

    <!-- Close Button -->
    <TextView
        android:id="@+id/btnCloseContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Close"
                android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="#4CAF50"
        android:padding="16dp"
        android:gravity="center"
        android:layout_marginTop="8dp" />

</LinearLayout>