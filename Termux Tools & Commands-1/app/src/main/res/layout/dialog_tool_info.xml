<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#2C2C2C"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/imageViewToolDialog"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#E3F2FD"
            android:padding="8dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewToolTitleDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tool Name"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewToolDescriptionDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tool Description"
                android:textColor="#B0B0B0"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Introduction Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Introduction"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewDetailedInfoDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detailed Information"
                android:textSize="14sp"
                android:textColor="#444444"
                android:lineSpacingMultiplier="1.2"
                android:layout_marginBottom="16dp" />

            <!-- Educational Disclaimer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFEBEE"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#FFEBEE">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_warning"
                    android:layout_marginEnd="8dp"
                    android:tint="#D32F2F" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="This content is for educational purposes only. We do not promote hacking or illegal activities and we are not responsible for any kind of misuse."
                    android:textSize="12sp"
                    android:textColor="#D32F2F"
                    android:lineSpacingMultiplier="1.3"
                    android:textStyle="italic" />

            </LinearLayout>

            <!-- Installation Commands Section with Copy Icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Installation Commands"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <ImageView
                    android:id="@+id/btnCopyInstall"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_copy"
                    android:padding="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

            <!-- Extra Text Above Installation Commands -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Just copy this one-line command and paste in Termux:"
                android:textSize="13sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp"
                android:paddingHorizontal="4dp" />

            <TextView
                android:id="@+id/textViewInstallCommandsDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Installation commands"
                android:textSize="12sp"
                android:textColor="#444444"
                android:background="#F5F5F5"
                android:padding="12dp"
                android:lineSpacingMultiplier="1.2"
                android:fontFamily="monospace"
                android:textIsSelectable="true"
                android:layout_marginBottom="16dp" />

            <!-- Usage Commands Section with Copy Icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Usage Commands"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <ImageView
                    android:id="@+id/btnCopyUsage"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_copy"
                    android:padding="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

            <!-- Extra Text Above Usage Commands -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Basic usage commands:"
                android:textSize="13sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp"
                android:paddingHorizontal="4dp" />

            <TextView
                android:id="@+id/textViewUsageCommandsDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usage commands"
                android:textSize="12sp"
                android:textColor="#444444"
                android:background="#F5F5F5"
                android:padding="12dp"
                android:lineSpacingMultiplier="1.2"
                android:fontFamily="monospace"
                android:textIsSelectable="true"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Close Button -->
    <TextView
        android:id="@+id/btnCloseDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Close"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="#4CAF50"
        android:padding="16dp"
        android:gravity="center"
        android:layout_marginTop="8dp" />

</LinearLayout>