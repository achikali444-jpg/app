<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#2C2C2C"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/imageViewTermsDialog"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#E3F2FD"
            android:padding="8dp" />

        <TextView
            android:id="@+id/textViewTermsTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="Terms of Service"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center_vertical" />

    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Terms of Service Content -->
            <TextView
                android:id="@+id/textViewTermsContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Terms of Service content will appear here"
                android:textSize="12sp"
                android:textColor="#444444"
                android:lineSpacingMultiplier="1.3"
                android:textIsSelectable="true"
                android:linksClickable="true"
                android:layout_marginBottom="16dp" />

            <!-- Contact Email Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Email:"
                android:textSize="14sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Email Box with Copy Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#E3F2FD"
                android:padding="12dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/textViewTermsEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ“§ achikahmed.info@gmail.com\nðŸ‘¤ Developer: Achik Ahmed"
                    android:textSize="13sp"
                    android:textColor="#2196F3"
                    android:gravity="center_vertical" />

                <ImageView
                    android:id="@+id/btnCopyTermsEmail"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_copy"
                    android:padding="4dp"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

            <!-- Important Note -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ”— Tap on links to open them in browser\nðŸ“ You can also select and copy any text"
                android:textSize="11sp"
                android:textColor="#666666"
                android:textStyle="italic"
                android:background="#FFF9C4"
                android:padding="8dp"
                android:gravity="center" />

        </LinearLayout>

    </ScrollView>

    <!-- Close Button -->
    <TextView
        android:id="@+id/btnCloseTerms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Close"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="#4CAF50"
        android:padding="16dp"
        android:gravity="center"
        android:layout_marginTop="8dp" />

</LinearLayout>